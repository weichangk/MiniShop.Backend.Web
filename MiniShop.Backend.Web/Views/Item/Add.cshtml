@model ItemCreateDto

<!DOCTYPE html>
<html lang="en"  xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/component/pear/css/pear.css" />
</head>

<body>
    <form class="layui-form" asp-controller="Categorie" asp-action="Add" data-ajax="true" data-ajax-method="post" data-ajax-success="onSuccess"
        style="margin: 0 auto;max-width: 460px;padding-top: 40px;">
                <input type="hidden" id="ShopId" asp-for="ShopId"/>
                <input type="hidden" id="CategorieId" asp-for="CategorieId"/>
                <input type="hidden" id="UnitId" asp-for="UnitId"/>
                <input type="hidden" id="Type" asp-for="Type"/>
                <input type="hidden" id="PriceType" asp-for="PriceType"/>
                <div class="layui-form-item">
                    <label class="layui-form-label">条码</label>
                    <div class="layui-input-block">
                        <input type="text" name="Code" value="@Model.Code" readonly="" lay-verify="" autocomplete="off" placeholder="请输入商品条码" class="layui-input" required />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">名称</label>
                    <div class="layui-input-block">
                        <input type="text" name="Name" value="@Model.Name" lay-verify="" autocomplete="off" placeholder="请输入类别名称" class="layui-input" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">类别</label>
                    <div class="layui-input-block">
                        <input type="text" name="Name" value="" lay-verify="" autocomplete="off" placeholder="请输入类别名称" class="layui-input" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">单位</label>
                    <div class="layui-input-block">
                        <input type="text" name="UnitCategorieName" value="" lay-verify="" autocomplete="off" placeholder="请输入类别名称" class="layui-input" />
                    </div>
                </div>      
                <div class="layui-form-item">
                    <label class="layui-form-label">进货价</label>
                    <div class="layui-input-block">
                        <input type="number" name="PurchasePrice" value="@Model.PurchasePrice" lay-verify="" autocomplete="off" placeholder="请输入进货价" class="layui-input" required />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">售价</label>
                    <div class="layui-input-block">
                        <input type="number" name="Price" value="@Model.Price" lay-verify="" autocomplete="off" placeholder="请输入售价" class="layui-input" required />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">类型</label>
                    <div class="layui-input-block">
                        <select id="OptionItemType" lay-filter="SelectItemType" lay-verify="required">
                            <option value="">请选择一个类型</option>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">计价</label>
                    <div class="layui-input-block">
                        <select id="OptionItemPriceType" lay-filter="SelectItemPriceType" lay-verify="required">
                            <option value="">请选择一个计价方式</option>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">图片</label>
                    <div class="layui-input-block">
                        <input type="text" name="Picture" value="@Model.Picture" lay-verify="" autocomplete="off" placeholder="请上传图片" class="layui-input" />
                    </div>
                </div>

                <div class="layui-form-item">
                    <button type="submit" class="pear-btn pear-btn-primary pear-btn-sm" lay-submit="" lay-filter=""
                    style="margin-left: 333px;">
                        <i class="layui-icon layui-icon-ok"></i>
                        提交
                    </button>
                    <button type="reset" class="pear-btn pear-btn-sm">
                        <i class="layui-icon layui-icon-refresh"></i>
                        重置
                    </button>
                </div>

    </form>

    <script src="~/component/layui/layui.js"></script>
    <script src="~/component/pear/pear.js"></script>
    <script src="~/js/verify.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>

    <script>
        layui.use(['form', 'jquery'], function () {
            let form = layui.form;
            let $ = layui.jquery;

            form.verify({
                nameCheck: function (value) {
                    if (!str_2_32_len(value))
                        return '请输入正确的类别名称！2到32位！'
                },
            });

            BindItemType();
            form.on('select(SelectItemType)', function (data) {
                $('#Type').val(data.value);
            });

            BindItemPriceType();
            form.on('select(SelectItemPriceType)', function (data) {
                $('#PriceType').val(data.value);
            });
        });

        var onSuccess = function (result) {
            if (result.success) 
            {
                layer.msg(result.msg, { icon: 1, time: 1000 }, function () {
                    parent.layer.close(parent.layer.getFrameIndex(window.name));
                    parent.layui.table.reload("categorie-table",{
                        url: 'GetPageOnShop',
                    });
                });
            } 
            else
            {
                parent.layer.open({
                    type: 2,
                    title: '',
                    shade: 0.1,
                    area: ['900px', '600px'],
                    content: '/Error/Error?statusCode=' + result.status + '&errorMsg=' + result.msg,
                });
            }
        };

        function BindItemType() {
            $.get('GetItemTypes', function (result) {
                layui.use('form', function () {
                    var form = layui.form;
                    if (result.success) {
                        var str = ''; //声明字符串
                        //var data = $.parseJSON(result.data);//转成Json对象
                        $("#OptionItemType option:gt(0)").remove();//重新加载前，移除第一个以外的option
                        $.each(result.data, function (i, obj) {
                            str += '<option value="' + obj.opValue + '">' + obj.opName + '</option>';
                        });//遍历循环遍历
                        $(str).appendTo("#OptionItemType");//绑定
                        //$("#OptionItemType option:eq(1)").attr("selected", 'selected'); //默认选择第一个选项
                        //form.render("select");//注意：最后必须重新渲染下拉框，否则没有任何效果。
                    }
                });
            });
        };

        function BindItemPriceType() {
            $.get('GetItemPriceTypes', function (result) {
                layui.use('form', function () {
                    var form = layui.form;
                    if (result.success) {
                        var str = ''; //声明字符串
                        //var data = $.parseJSON(result.data);//转成Json对象
                        $("#OptionItemPriceType option:gt(0)").remove();//重新加载前，移除第一个以外的option
                        $.each(result.data, function (i, obj) {
                            str += '<option value="' + obj.opValue + '">' + obj.opName + '</option>';
                        });//遍历循环遍历
                        $(str).appendTo("#OptionItemPriceType");//绑定
                        //$("#OptionItemPriceType option:eq(1)").attr("selected", 'selected'); //默认选择第一个选项
                        //form.render("select");//注意：最后必须重新渲染下拉框，否则没有任何效果。
                    }
                });
            });
        };

    </script>

</body>
</html>

