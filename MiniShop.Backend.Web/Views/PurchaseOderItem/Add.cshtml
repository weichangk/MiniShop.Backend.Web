@model PurchaseOderItemCreateDto

<!DOCTYPE html>
<html lang="en"  xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/component/pear/css/pear.css" />
</head>

<body>
    <form class="layui-form" asp-controller="PurchaseOderItem" asp-action="Add" data-ajax="true" data-ajax-method="post" data-ajax-success="onSuccess">
        <div class="mainBox">
            <div class="main-container">
                <input type="hidden" id="ShopId" name="ShopId" asp-for="ShopId"/>
                <input type="hidden" id="OderNo" name="OderNo" asp-for="OderNo"/>
                <input type="hidden" id="ItemId" name="ItemId" asp-for="ItemId"/>
                <input type="hidden" id="ItemCode" name="ItemCode" asp-for="ItemCode"/>
                <div class="layui-form-item">
                    <label class="layui-form-label" style="width: auto">品名</label>
                    <div class="layui-input-block">
                        <input type="text" id="ItemName" name="ItemName" value="@Model.ItemName" lay-verify="" autocomplete="off" placeholder="" class="layui-input" lay-click lay-filter="ClickItemName">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label" style="width: auto">单位</label>
                    <div class="layui-input-block">
                        <input type="text" id="UnitName" name="UnitName" value="@Model.UnitName" lay-verify="" autocomplete="off" placeholder="" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label" style="width: auto">进货价</label>
                    <div class="layui-input-block">
                        <input type="text" id="PurchasePrice" name="PurchasePrice" value="@Model.PurchasePrice" lay-verify="" autocomplete="off" placeholder="" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label" style="width: auto">实际进货价</label>
                    <div class="layui-input-block">
                        <input type="text" id="RealPurchasePrice" name="RealPurchasePrice" value="@Model.RealPurchasePrice" lay-verify="" autocomplete="off" placeholder="" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label" style="width: auto">数量</label>
                    <div class="layui-input-block">
                        <input type="text" id="Number" name="Number" value="@Model.Number" lay-verify="" autocomplete="off" placeholder="" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label" style="width: auto">赠送数量</label>
                    <div class="layui-input-block">
                        <input type="text" id="GiveNumber" name="GiveNumber" value="@Model.GiveNumber" lay-verify="" autocomplete="off" placeholder="" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label" style="width: auto">小计</label>
                    <div class="layui-input-block">
                        <input type="text" id="Amount" name="Amount" value="@Model.Amount" lay-verify="" autocomplete="off" placeholder="" class="layui-input">
                    </div>
                </div>
            </div>
        </div>
        <div class="bottom">
            <div class="button-container">
                <button type="submit" class="pear-btn pear-btn-primary pear-btn-sm" lay-submit="" lay-filter="">
                    <i class="layui-icon layui-icon-ok"></i>
                    提交
                </button>
                <button type="reset" class="pear-btn pear-btn-sm">
                    <i class="layui-icon layui-icon-refresh"></i>
                    重置
                </button>
            </div>
        </div>
    </form>

    <script src="~/component/layui/layui.js"></script>
    <script src="~/component/pear/pear.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <script>
        layui.use(['table', 'form',], function () {
            let table = layui.table;
            let form = layui.form;

            // 获取父窗体信息
            window.GetParentIframeData = function (data) {
                $('#ShopId').val(data.ShopId);
                $('#OderNo').val(data.OderNo);
            }

            // 打开商品选择
            $('#ItemName').on("click", itemName_input_click_handler);
            // 获取选择商品信息
            window.GetSelectItemData = function (data) { 
                $('#ItemId').val(data.id);
                $('#ItemCode').val(data.code);
                $('#ItemName').val(data.name);
                $('#UnitName').val(data.unitName);
                $('#PurchasePrice').val(data.purchasePrice);
            };

        });

        var onSuccess = function (result) {
            if (result.success) 
            {
                layer.msg(result.msg, { icon: 1, time: 1000 }, function () {
                    parent.layer.close(parent.layer.getFrameIndex(window.name));
                    parent.layui.table.reload("purchaseoder-table",{
                        url: '/PurchaseOderItem/GetPageByOderNo?oderNo=' + $('#OderNo').val(), 
                    });
                });
            } 
            else
            {
                parent.layer.open({
                    type: 2,
                    title: '',
                    shade: 0.1,
                    area: ['900px', '600px'],
                    content: '/Error/Error?statusCode=' + result.status + '&errorMsg=' + result.msg,
                });
            }
        };

        // 打开商品选择窗体
        function itemName_input_click_handler(){
            let index = layer.open({
                type: 2,
                title: '选择商品',
                shade: 0.1,
                area: ['1280px', '768px'],
                content: '/item/selectitem',
                success : function () {            
                },
                cancel: function(){
                }
            });
            layer.full(index)
        };

    </script>

</body>
</html>

